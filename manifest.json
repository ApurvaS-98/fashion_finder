{
  "manifest_version": 3,
  "name": "Image Capture & ChatGPT Assistant",
  "version": "1.0",
  "description": "Capture areas of webpages as images and integrate with ChatGPT for analysis.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "tabs",
    "scripting",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["me.webp"],
      "matches": ["<all_urls>"]
    }
  ]
} 