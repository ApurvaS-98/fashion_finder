{
  "manifest_version": 3,
  "name": "Area Capture Tool",
  "version": "1.0",
  "description": "Draw a circle around any area to capture it as an image.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "tabs",
    "scripting",
    "clipboardRead"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
} 